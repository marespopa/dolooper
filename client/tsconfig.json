{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/constants/*": ["/utils/constants/*"],
      "@/components/*": ["components/*"],
      "@/utils/*": ["/utils/*"],
      "@/hooks/*": ["/hooks/*"],
      "@/types/*": ["/types/*"],
      "@/icons/*": ["../icons"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "pages/sw.js"
  ],
  "exclude": ["node_modules", "jest.config.js", "sw.js"]
}
